{
	"compilerOptions": {
    "target": "es2024",
		"outDir": "dist",
		"rootDir": "src",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "."
	},
	"include": [
		"src"
	],
	"exclude": ["node_modules", "dist"]
}
